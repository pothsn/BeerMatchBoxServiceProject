@model IEnumerable<BeerMatchBoxService.Models.BreweryDBBrewery>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="BreweryDBBeers" asp-action="GetBreweryBeers" asp-route-brewerydbbreweryid="@item.BreweryDBBreweryId">Beers</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
